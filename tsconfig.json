{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "allowJs": false,
    "jsx": "preserve",
    "baseUrl": "./src",
    "outDir": "build",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "plugins": [
			{
        "name": "tslint-language-service",
        "ignoreDefinitionFiles": true
      }
    ]
  },
  "include": [
    "src/**/*"
  ]
}
